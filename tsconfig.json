{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2019"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "noEmit": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types/markdown"]
  },
  "include": [
    "src/**/*",
    "assets/icons/*"
  ],
  "exclude": ["node_modules"],
  "extends": "expo/tsconfig.base"
}
