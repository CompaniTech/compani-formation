{
  "cli": {
    "version": ">= 0.57.0",
    "requireCommit": "true"
  },
  "build": {
    "local": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "PROFILE": "local"
      }
    },
    "local-simulator": {
      "extends": "local",
      "ios": {
        "simulator": true
      }
    },
    "development": {
      "channel": "development",
      "distribution": "internal",
      "env": {
        "PROFILE": "development"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "development-simulator": {
      "extends": "development",
      "ios": {
        "simulator": true
      }
    },
    "prod": {
      "channel": "production",
      "env": {
        "PROFILE": "production"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
